<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/textview_emergencies_date"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:gravity="center|start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorThemeRedText1"/>

    <TextView
        android:id="@+id/textview_emergencies_time"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/textview_emergencies_date"
        android:layout_marginLeft="5dp"
        android:gravity="center|start"
        android:textSize="16sp"
        android:textColor="@color/colorThemeRedText1"/>

    <TextView
        android:id="@+id/textview_emergencies_latitude"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/textview_emergencies_longitude"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textview_emergencies_date"
        android:gravity="center|start"
        android:textSize="14sp"
        android:textColor="@color/colorThemeRedText1"/>
    <TextView
        android:id="@+id/textview_emergencies_longitude"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_below="@id/textview_emergencies_date"
        android:layout_marginTop="10dp"
        android:gravity="center|start"
        android:textSize="14sp"
        android:textColor="@color/colorThemeRedText1"/>
</RelativeLayout>